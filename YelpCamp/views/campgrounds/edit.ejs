<%include ../partials/header%>
<a class="btn btn-sm btn-danger" href="/campgrounds">go back</a>
<div class="container">
	<div class="row">
		<div class="jumbotron" style="width:70%; margin: 0 auto;">	
				<h1 style="padding: 10px 0px 10px 0px">Edit <%=camp.name%> Campground</h1>
				
				<!-- for proper spacing between form elements use form-group for each -->
				<form action="/campgrounds/<%=camp._id%>?_method=PUT" method="POST">
					<div class="form-group">	
						<label class="label label-info" for="cname">Enter Camp Name</label>
						<input class="form-control" type="text" name="cname" value="<%=camp.name%>">
					</div>
				
					<div class="form-group">	
						<label class="label label-info" for="cimg">Enter Camp Image URL</label>
						<input class="form-control" type="text" name="cimg" value="<%=camp.image%>">
					</div>
					<div class="form-group">	
						<label class="label label-info" for="cdesc">Enter Camp Description</label>
						<input class="form-control" type="text-area" name="cdesc" value="<%=camp.desc%>">
					</div>
					<div class="form-group">	
						<button class="btn btn-lg btn-danger btn-block">Submit</button>
					</div>	
				</form>
					
		</div>			
	</div>		
	
</div>

<%include ../partials/footer%>	